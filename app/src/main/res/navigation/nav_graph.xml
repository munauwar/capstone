<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.capstone.MoviesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_movies">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_reviewsFragment3"
            app:destination="@id/reviewsFragment2" />
        <action
            android:id="@+id/action_FirstFragment_to_reviewsFragment2"
            app:destination="@id/reviewsFragment2" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.capstone.MoviesDetailFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_movies_detail">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/reviewsFragment2"
        android:name="com.example.capstone.ReviewsFragment"
        android:label="fragment_reviews"
        tools:layout="@layout/fragment_reviews" />
</navigation>